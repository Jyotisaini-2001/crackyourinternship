class Solution {
public:
    string addBinary(string a, string b) {
        int carry=0;
        string s="";
    reverse(a.begin(),a.end()); 
    reverse(b.begin(),b.end());
    int i=0,sum;
        while (i<a.length() || i<b.length() || carry!=0 ){
            int x=0;
            if (i<a.length() && a[i]=='1'){
                x=1;
            }
            
            int y=0;
            if(i<b.length() && b[i]=='1'){
                y=1;
            }
            result=to_string((x+y+carry)%2) + s;
            carry=(x+y+carry)/2;
            i+=1;
        }
        return s;
        
    }
};
